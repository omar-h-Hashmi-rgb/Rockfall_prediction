# Environment variables for Streamlit deployment

# API Configuration
API_BASE=http://localhost:8000

# MongoDB Configuration (use MongoDB Atlas for cloud deployment)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=rockfall_db

# MapMyIndia API (get free token from mapmyindia.com)
MAPMYINDIA_ACCESS_TOKEN=
MAPMYINDIA_API_BASE_URL=https://apis.mapmyindia.com/advancedmaps/v1

# Email Alerts (SendGrid - get free API key)
SENDGRID_API_KEY=
ALERT_EMAIL_FROM=alerts@example.com
ALERT_EMAIL_TO=ops@example.com

# SMS Alerts (SMS77 via RapidAPI)
SMS77IO_RAPIDAPI_KEY=
SMS77IO_HOST=sms77io.p.rapidapi.com
ALERT_SMS_TO=

# Security
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=false

# Model Configuration
MODEL_PATH=ml/artifacts/model.pkl
FEATURE_NAMES_PATH=ml/artifacts/feature_names.pkl
